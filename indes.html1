<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Cedric Gravenmoor – Persönlicher Computerzugang</title>

<style>
body {
    background: #0d1f17; /* sehr dunkles Grün */
    color: #e3d7a3; /* Goldton */
    font-family: "Garamond", serif;
    padding: 40px;
}

#container {
    background: #143026; /* sattes dunkles Grün */
    border: 2px solid #c7b36a; /* Gold */
    max-width: 750px;
    margin: auto;
    padding: 35px;
    border-radius: 14px;
    box-shadow: 0 0 25px rgba(0,0,0,0.4);
}

h2 {
    font-weight: normal;
    text-align: center;
    margin-bottom: 25px;
    color: #f0e6c8;
    font-size: 28px;
    letter-spacing: 1px;
    border-bottom: 1px solid #c7b36a;
    padding-bottom: 10px;
}

h3 {
    margin-top: 10px;
    margin-bottom: 15px;
    color: #f0e6c8;
    border-left: 4px solid #c7b36a;
    padding-left: 8px;
    font-size: 22px;
}

input, button {
    padding: 10px 14px;
    border-radius: 6px;
    border: 1px solid #c7b36a;
    font-size: 16px;
    margin-top: 10px;
    background: #1f3d31;
    color: #f8eecf;
}

button {
    background: #2f4c3f;
    cursor: pointer;
    transition: 0.2s;
}

button:hover {
    background: #3f5f51;
}

#menu { display: none; margin-top: 25px; }
#doc { margin-top: 20px; white-space: pre-wrap; }

#pdfviewer { 
    margin-top: 20px; 
    display: none;
}

#pdf-frame {
    width: 100%;
    height: 520px;
    border: 1px solid #c7b36a;
    background: #0d1f17;
}
</style>
</head>

<body>
<div id="container">

<h2>◆ Persönlicher Zugang – Cedric Gravenmoor ◆</h2>

<div id="login">
  Passwort: <br>
  <input type="password" id="pw">
  <br>
  <button onclick="checkPW()">Login</button>
  <p id="msg"></p>
</div>

<div id="menu">

  <h3>Wichtige Dokumente</h3>

  <button onclick="showPDF('testament_cedric.pdf')">Testament Cedric Gravenmoor (Original)</button>
  <button onclick="showPDF('brief_olivia.pdf')">Brief an Olivia</button>
  <button onclick="showPDF('schreiben_charles.pdf')">Schreiben Charles</button>
  <button onclick="showPDF('kuendigung_frederick.pdf')">Kündigung Frederick</button>

  <br><br>
  <button onclick="logout()">Logout</button>

  <div id="pdfviewer">
      <iframe id="pdf-frame"></iframe>
  </div>

</div>

</div>

<script>
const password = "gravenmoor";  // ← Passwort nach Wunsch ändern

function checkPW() {
    if (document.getElementById("pw").value === password) {
        document.getElementById("login").style.display = "none";
        document.getElementById("menu").style.display = "block";
    } else {
        document.getElementById("msg").textContent = "❌ Falsches Passwort!";
    }
}

function showPDF(datei) {
    document.getElementById("pdfviewer").style.display = "block";
    document.getElementById("pdf-frame").src = datei;
}

function logout() {
    document.getElementById("menu").style.display = "none";
    document.getElementById("login").style.display = "block";
    document.getElementById("pw").value = "";
    document.getElementById("msg").textContent = "";
    document.getElementById("pdfviewer").style.display = "none";
    document.getElementById("pdf-frame").src = "";
}
</script>

</body>
</html>
